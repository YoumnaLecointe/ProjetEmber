{{page-title "Products"}}
<legend>Nos produits</legend>
<LinkTo @route="section.addproduct"><button> Ajouter produit </button></LinkTo>
{{outlet}}
<table>
  <thead>
  <tr>
    <th>Nom</th><th>Prix</th><th>Promotion</th>
  </tr>
  </thead>
  {{#each @model.section.products as |product|}}
    <tbody>
    <tr>
      <td>{{product.name}}</td>
      <td>{{product.price}}</td>
      <td>{{product.promotion}}</td>
    </tr></tbody>
  {{/each}}
</table>