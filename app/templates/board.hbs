    counter-increment: repas;
    margin-bottom: 10px;
  }
  li:before {
    content: counter(repas);
    padding: 0 20px 6px;
    margin-right: 8px;
    vertical-align: top;
    background: #678;
    -moz-border-radius: 60px;
    border-radius: 60px;
    font-weight: bold;
    font-size: 0.8em;
    color: white;
  }
</style>
